@page "/employees/create"
@rendermode InteractiveServer
@using IssueDrivenWorkshop.Models
@using IssueDrivenWorkshop.Services
@inject EmployeeService EmployeeService
@inject NavigationManager NavigationManager

<PageTitle>社員登録</PageTitle>

<h1>社員登録</h1>

<div class="row">
    <div class="col-md-8">
        <EditForm Model="@employee" OnValidSubmit="@HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <div class="mb-3">
                <label for="employeeId" class="form-label">社員ID <span class="text-danger">*</span></label>
                <InputText id="employeeId" class="form-control" @bind-Value="employee.EmployeeId" placeholder="EMP001" />
                <ValidationMessage For="@(() => employee.EmployeeId)" />
            </div>

            <div class="mb-3">
                <label for="fullName" class="form-label">氏名 <span class="text-danger">*</span></label>
                <InputText id="fullName" class="form-control" @bind-Value="employee.FullName" placeholder="山田 太郎" />
                <ValidationMessage For="@(() => employee.FullName)" />
            </div>

            <div class="mb-3">
                <label for="kana" class="form-label">フリガナ</label>
                <InputText id="kana" class="form-control" @bind-Value="employee.Kana" placeholder="ヤマダ タロウ" />
            </div>

            <div class="mb-3">
                <label for="department" class="form-label">部署 <span class="text-danger">*</span></label>
                <InputSelect id="department" class="form-select" @bind-Value="employee.Department">
                    <option value="">選択してください</option>
                    <option value="営業部">営業部</option>
                    <option value="開発部">開発部</option>
                    <option value="人事部">人事部</option>
                    <option value="経理部">経理部</option>
                    <option value="総務部">総務部</option>
                    <option value="マーケティング部">マーケティング部</option>
                </InputSelect>
                <ValidationMessage For="@(() => employee.Department)" />
            </div>

            <div class="mb-3">
                <label for="position" class="form-label">役職</label>
                <InputText id="position" class="form-control" @bind-Value="employee.Position" placeholder="部長、課長、主任など" />
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">メールアドレス</label>
                <InputText id="email" type="email" class="form-control" @bind-Value="employee.Email" placeholder="yamada.taro@example.com" />
                <ValidationMessage For="@(() => employee.Email)" />
            </div>

            <div class="mb-3">
                <label for="hireDate" class="form-label">入社日 <span class="text-danger">*</span></label>
                <InputDate id="hireDate" class="form-control" @bind-Value="employee.HireDate" />
                <ValidationMessage For="@(() => employee.HireDate)" />
            </div>

            <div class="mb-3">
                <label for="dateOfBirth" class="form-label">生年月日</label>
                <InputDate id="dateOfBirth" class="form-control" @bind-Value="employee.DateOfBirth" />
            </div>

            <div class="mb-3">
                <label for="status" class="form-label">ステータス</label>
                <InputSelect id="status" class="form-select" @bind-Value="employee.Status">
                    <option value="在職中">在職中</option>
                    <option value="休職中">休職中</option>
                    <option value="退職済み">退職済み</option>
                </InputSelect>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                    @if (isSubmitting)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        <span>登録中...</span>
                    }
                    else
                    {
                        <span>登録する</span>
                    }
                </button>
                <a href="/employees" class="btn btn-secondary ms-2">キャンセル</a>
            </div>

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @errorMessage
                </div>
            }
        </EditForm>
    </div>
</div>

@code {
    private Employee employee = new Employee
    {
        HireDate = DateTime.Today,
        Status = "在職中"
    };
    private bool isSubmitting = false;
    private string errorMessage = string.Empty;

    private async Task HandleValidSubmit()
    {
        isSubmitting = true;
        errorMessage = string.Empty;

        try
        {
            // 入力検証
            if (string.IsNullOrWhiteSpace(employee.EmployeeId))
            {
                errorMessage = "社員IDを入力してください。";
                return;
            }

            if (string.IsNullOrWhiteSpace(employee.FullName))
            {
                errorMessage = "氏名を入力してください。";
                return;
            }

            if (string.IsNullOrWhiteSpace(employee.Department))
            {
                errorMessage = "部署を選択してください。";
                return;
            }

            // DateTimeをUTCとして設定
            employee.HireDate = new DateTime(
                employee.HireDate.Year,
                employee.HireDate.Month,
                employee.HireDate.Day,
                0, 0, 0,
                DateTimeKind.Utc
            );

            if (employee.DateOfBirth.HasValue)
            {
                employee.DateOfBirth = new DateTime(
                    employee.DateOfBirth.Value.Year,
                    employee.DateOfBirth.Value.Month,
                    employee.DateOfBirth.Value.Day,
                    0, 0, 0,
                    DateTimeKind.Utc
                );
            }

            await EmployeeService.CreateEmployeeAsync(employee);
            
            // 一覧画面へリダイレクト
            NavigationManager.NavigateTo("/employees");
        }
        catch (Exception ex)
        {
            errorMessage = $"社員の登録に失敗しました: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
