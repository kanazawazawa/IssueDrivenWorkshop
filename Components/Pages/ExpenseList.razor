@page "/expense-requests"
@rendermode InteractiveServer
@using IssueDrivenWorkshop.Models
@using IssueDrivenWorkshop.Services
@inject ExpenseRequestService ExpenseService

<PageTitle>経費申請一覧</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>経費申請一覧</h1>
    <a href="/expense-requests/create" class="btn btn-primary">
        <span class="bi bi-plus-circle me-1"></span> 新規作成
    </a>
</div>

@if (isLoading)
{
    <p><em>読み込み中...</em></p>
}
else if (expenseRequests == null || !expenseRequests.Any())
{
    <p><em>データがありません。</em></p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>申請日</th>
                <th>社員名</th>
                <th>部署</th>
                <th>カテゴリ</th>
                <th>金額</th>
                <th>説明</th>
                <th>ステータス</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in expenseRequests)
            {
                <tr>
                    <td>@request.ExpenseDate.ToString("yyyy/MM/dd")</td>
                    <td>@request.EmployeeName</td>
                    <td>@request.Department</td>
                    <td>@request.Category</td>
                    <td>@request.Amount.ToString("N0")円</td>
                    <td>@request.Description</td>
                    <td>
                        <span class="badge @GetStatusBadgeClass(request.Status)">
                            @request.Status
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ExpenseRequest>? expenseRequests;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        try
        {
            expenseRequests = await ExpenseService.GetAllExpenseRequestsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading expense requests: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "申請中" => "bg-primary",
            "承認済" => "bg-success",
            "却下" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
