@page "/"
@rendermode InteractiveServer
@using IssueDrivenWorkshop.Models
@using IssueDrivenWorkshop.Services
@inject ExpenseRequestService ExpenseService

<PageTitle>ダッシュボード</PageTitle>

<div class="container-fluid">
    <h1 class="mb-4">経費申請ダッシュボード</h1>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">読み込み中...</span>
            </div>
            <p class="mt-3"><em>読み込み中...</em></p>
        </div>
    }
    else
    {
        <!-- Statistics Cards -->
        <div class="row g-4 mb-4">
            <!-- Total Requests Card -->
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-muted">総申請数</h6>
                                <h2 class="card-title mb-0">@totalCount</h2>
                            </div>
                            <div class="text-primary" style="font-size: 2.5rem;">
                                <i class="bi bi-file-earmark-text"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pending Requests Card -->
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-muted">申請中</h6>
                                <h2 class="card-title mb-0 text-primary">@pendingCount</h2>
                            </div>
                            <div class="text-primary" style="font-size: 2.5rem;">
                                <i class="bi bi-hourglass-split"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Approved Requests Card -->
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-muted">承認済</h6>
                                <h2 class="card-title mb-0 text-success">@approvedCount</h2>
                            </div>
                            <div class="text-success" style="font-size: 2.5rem;">
                                <i class="bi bi-check-circle"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Rejected Requests Card -->
            <div class="col-12 col-md-6 col-xl-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-muted">却下</h6>
                                <h2 class="card-title mb-0 text-danger">@rejectedCount</h2>
                            </div>
                            <div class="text-danger" style="font-size: 2.5rem;">
                                <i class="bi bi-x-circle"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Amount Summary -->
        <div class="row g-4 mb-4">
            <div class="col-12 col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-cash-stack me-2"></i>総経費金額
                        </h5>
                        <h1 class="display-4 text-primary mb-0">
                            ¥@totalAmount.ToString("N0")
                        </h1>
                        <p class="text-muted mt-2 mb-0">
                            <small>承認済: ¥@approvedAmount.ToString("N0")</small>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Status Chart -->
            <div class="col-12 col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-pie-chart me-2"></i>ステータス内訳
                        </h5>
                        @if (totalCount > 0)
                        {
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span>申請中</span>
                                    <span class="badge bg-primary">@pendingCount (@((pendingCount * 100.0 / totalCount).ToString("F1"))%)</span>
                                </div>
                                <div class="progress mb-3" style="height: 20px;">
                                    <div class="progress-bar bg-primary" role="progressbar" 
                                         style="width: @((pendingCount * 100.0 / totalCount))%"
                                         aria-valuenow="@pendingCount" aria-valuemin="0" aria-valuemax="@totalCount"></div>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span>承認済</span>
                                    <span class="badge bg-success">@approvedCount (@((approvedCount * 100.0 / totalCount).ToString("F1"))%)</span>
                                </div>
                                <div class="progress mb-3" style="height: 20px;">
                                    <div class="progress-bar bg-success" role="progressbar" 
                                         style="width: @((approvedCount * 100.0 / totalCount))%"
                                         aria-valuenow="@approvedCount" aria-valuemin="0" aria-valuemax="@totalCount"></div>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span>却下</span>
                                    <span class="badge bg-danger">@rejectedCount (@((rejectedCount * 100.0 / totalCount).ToString("F1"))%)</span>
                                </div>
                                <div class="progress" style="height: 20px;">
                                    <div class="progress-bar bg-danger" role="progressbar" 
                                         style="width: @((rejectedCount * 100.0 / totalCount))%"
                                         aria-valuenow="@rejectedCount" aria-valuemin="0" aria-valuemax="@totalCount"></div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">データがありません</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Expense Requests -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-clock-history me-2"></i>最近の経費申請
                        </h5>
                        @if (recentExpenses != null && recentExpenses.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>申請日</th>
                                            <th>社員名</th>
                                            <th>部署</th>
                                            <th>カテゴリ</th>
                                            <th class="text-end">金額</th>
                                            <th>ステータス</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var request in recentExpenses)
                                        {
                                            <tr>
                                                <td>@request.ExpenseDate.ToString("yyyy/MM/dd")</td>
                                                <td>@request.EmployeeName</td>
                                                <td>@request.Department</td>
                                                <td>@request.Category</td>
                                                <td class="text-end">¥@request.Amount.ToString("N0")</td>
                                                <td>
                                                    <span class="badge @GetStatusBadgeClass(request.Status)">
                                                        @request.Status
                                                    </span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="text-center mt-3">
                                <a href="/expense-requests" class="btn btn-outline-primary">
                                    すべての申請を見る <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0">最近の申請はありません</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<ExpenseRequest>? expenseRequests;
    private List<ExpenseRequest>? recentExpenses;
    private bool isLoading = true;

    private int totalCount = 0;
    private int pendingCount = 0;
    private int approvedCount = 0;
    private int rejectedCount = 0;
    private int totalAmount = 0;
    private int approvedAmount = 0;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        try
        {
            expenseRequests = await ExpenseService.GetAllExpenseRequestsAsync();

            if (expenseRequests != null)
            {
                totalCount = expenseRequests.Count;
                pendingCount = expenseRequests.Count(e => e.Status == "申請中");
                approvedCount = expenseRequests.Count(e => e.Status == "承認済");
                rejectedCount = expenseRequests.Count(e => e.Status == "却下");
                totalAmount = expenseRequests.Sum(e => e.Amount);
                approvedAmount = expenseRequests.Where(e => e.Status == "承認済").Sum(e => e.Amount);

                // Get 5 most recent expense requests
                recentExpenses = expenseRequests.Take(5).ToList();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading expense requests: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "申請中" => "bg-primary",
            "承認済" => "bg-success",
            "却下" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
