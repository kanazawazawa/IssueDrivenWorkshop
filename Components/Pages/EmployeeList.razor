@page "/employees"
@rendermode InteractiveServer
@using IssueDrivenWorkshop.Models
@using IssueDrivenWorkshop.Services
@inject EmployeeService EmployeeService

<PageTitle>社員一覧</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>社員一覧</h1>
    <a href="/employees/create" class="btn btn-primary">
        <span class="bi bi-plus-circle me-1"></span> 新規登録
    </a>
</div>

@if (isLoading)
{
    <p><em>読み込み中...</em></p>
}
else if (employees == null || !employees.Any())
{
    <p><em>データがありません。</em></p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>社員ID</th>
                <th>氏名</th>
                <th>フリガナ</th>
                <th>部署</th>
                <th>役職</th>
                <th>メールアドレス</th>
                <th>入社日</th>
                <th>ステータス</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in employees)
            {
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.FullName</td>
                    <td>@employee.Kana</td>
                    <td>@employee.Department</td>
                    <td>@employee.Position</td>
                    <td>@employee.Email</td>
                    <td>@employee.HireDate.ToString("yyyy/MM/dd")</td>
                    <td>
                        <span class="badge @GetStatusBadgeClass(employee.Status)">
                            @employee.Status
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Employee>? employees;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        try
        {
            employees = await EmployeeService.GetAllEmployeesAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading employees: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "在職中" => "bg-success",
            "退職済み" => "bg-secondary",
            "休職中" => "bg-warning",
            _ => "bg-secondary"
        };
    }
}
